<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/requester_currently_walking_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ee461l.surewalk.RequesterCurrentlyWalkingScreen">

    <ImageView
        android:layout_height="300dp"
        app:srcCompat="@drawable/sure_walk_logo"
        android:id="@+id/MapTemp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/TextWalker"
        android:background="@android:drawable/sym_action_email"
        android:elevation="0dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/CallWalker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/CallWalker"
        android:background="@android:drawable/ic_menu_call"
        android:layout_alignTop="@+id/ProfilePicture"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/profile"
        android:id="@+id/ProfilePicture"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/MapTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/CANCEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CancelRequest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/YourWalker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WalkerName"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/TextWalker"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
